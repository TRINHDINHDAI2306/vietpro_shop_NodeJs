<%-include("../layout/head.ejs", {title: "Add Product"})%>
<%-include("../layout/header.ejs")%>
<%-include("../layout/sidebar.ejs")%>
		
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
				<li><a href="">Quản lý bình luận</a></li>
				<li class="active">Chỉnh sửa bình luận</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Chỉnh sửa bình luận</h1>
			</div>
		</div><!--/.row-->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="col-md-8">
                        <form action="/admin/comments/update/<%=comment._id%>" role="form" method="post">
                            <div class="form-group">
                                <label>Họ và tên</label>
                                <input type="text" name="full_name" required value="<%=comment.full_name%>" class="form-control" placeholder="Họ và tên...">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" name="email" required value="<%=comment.email%>" class="form-control" placeholder="Email...">
                            </div>
                            <div class="form-group">
                                <label>Nội dung:</label>
                                <input type="text" name="body" required value="<%=comment.body%>" class="form-control" placeholder="Nội dung...">
                                <textarea id="details" name="description" required class="form-control" rows="3"></textarea>
                                <script>
	                                CKEDITOR.replace("details");
                                </script>
                            </div>
                            <button type="submit" name="sbm" class="btn btn-primary">Cập nhật</button>
                            <button type="reset" class="btn btn-default">Làm mới</button>
                        </div>
                    </form>
                    </div>
                </div>
            </div><!-- /.col-->
	</div>	<!--/.main-->	
<%-include("../layout/footer.ejs")%>