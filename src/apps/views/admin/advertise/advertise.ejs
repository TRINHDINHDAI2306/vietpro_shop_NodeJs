<%-include("../layout/head.ejs", {title: "advertise Manager"})%>
<%-include("../layout/header.ejs")%>
<%-include("../layout/sidebar.ejs")%>


	
		
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/admin/dashboard"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
				<li class="active">Danh sách Advertise</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Danh sách Advertise</h1>
			</div>
		</div><!--/.row-->
		<div id="toolbar" class="btn-group">
            <a href="/admin/advertise/create" class="btn btn-success">
                <i class="glyphicon glyphicon-plus"></i> Thêm Ảnh
            </a>
        </div> 
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-body">
                        <table 
                            data-toolbar="#toolbar"
                            data-toggle="table">
						    <thead>
						    <tr>
						        <th data-field="id">ID</th>
						        <th  >Tên</th>
                                <th >Ảnh</th>
                                <th data-field="body">Hành động</th>
						    </tr>
                            </thead>
                            <tbody>
                                <%for(let ad of advertise){%>
                                    <tr>
                                        <td></td>
                                        <td style=""><%=ad.name%></td>
                                        <td style="text-align: center"><img width="130" height="180" src="../uploads/images/<%=ad.image%>" /></td>
                                        <td class="form-group">
                                            <a href="/admin/advertise/edit/<%=ad._id%>" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i></a>
                                            <a href="/admin/advertise/delete/<%=ad._id%>" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                                        </td>
                                    </tr>
                                    <%}%>
                                 </tbody>
						</table>
                    </div>
                    <div class="panel-footer">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <%if(page >1){%>
                                <li class="page-item"><a class="page-link" href="/admin/advertise?page=<%=page-1%>">&laquo;</a></li>
                                <%}%>
                                <%for(let num of pages){%>
                                    <%if(num==="..."){%>
                                        <li class="page-item <%=num===page?'active':''%>"><span><%=num%></span></li>
                                    <%}
                                    else{%>
                                        <li class="page-item <%=num===page?'active':''%>"><a class="page-link" href="/admin/advertise?page=<%=num%>"><%=num%></a></li>
                                    <%}%>
                                
                                <%}%>
                                <%if(page<totalPages){%>
                                <li class="page-item"><a class="page-link" href="/admin/advertise?page=<%=page+1%>">&raquo;</a></li>
                                <%}%>
                            </ul>
                        </nav>
                    </div>
				</div>
			</div>
		</div><!--/.row-->	
	</div>	<!--/.main-->

	<script src="js/jquery-1.11.1.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
    <script src="js/bootstrap-table.js"></script>
<%-include("../layout/footer.ejs")%>
